---
const logoUrl = import.meta.env.BASE_URL + 'logo.jpg';
---

<section class="hero">
  <div class="hero-bg">
    <div class="hero-gradient"></div>
    <div class="hero-lines"></div>
  </div>
  
  <div class="hero-content">
    <div class="logo-container fade-in">
      <img src={logoUrl} alt="Calyx" class="logo" />
    </div>
    <nav class="hero-nav fade-in">
      <a href="#news" class="nav-link">News</a>
      <a href="#contact" class="nav-link">Contact</a>
    </nav>
  </div>

</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: -1;
  }

  .hero-gradient {
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse at center, #0f0f0f 0%, #000000 70%);
  }

  .hero-lines {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(90deg, transparent 49.5%, rgba(201, 169, 98, 0.03) 50%, transparent 50.5%),
      linear-gradient(0deg, transparent 49.5%, rgba(201, 169, 98, 0.03) 50%, transparent 50.5%);
    background-size: 100px 100px;
    animation: linesPulse 8s ease-in-out infinite;
  }

  @keyframes linesPulse {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.6; }
  }

  .hero-content {
    text-align: center;
    padding: 24px;
  }

  .logo-container {
    margin-bottom: 40px;
  }

  .logo {
    max-width: 400px;
    width: 100%;
    height: auto;
    filter: brightness(1.05);
  }

  .hero-nav {
    display: flex;
    gap: 50px;
    justify-content: center;
    animation-delay: 0.4s;
  }

  .nav-link {
    font-family: var(--font-serif);
    font-size: 1rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-text);
    position: relative;
    padding: 10px 0;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 1px;
    background: var(--color-accent);
    transition: all var(--transition-base);
    transform: translateX(-50%);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-link:hover {
    color: var(--color-accent);
  }

  .scroll-indicator {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    animation-delay: 0.6s;
  }

  .scroll-text {
    font-family: var(--font-serif);
    font-size: 0.7rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--color-text-muted);
  }

  .scroll-line {
    width: 1px;
    height: 40px;
    background: linear-gradient(180deg, var(--color-accent), transparent);
    animation: scrollPulse 2s ease-in-out infinite;
  }

  @keyframes scrollPulse {
    0%, 100% { 
      opacity: 0.5;
      transform: scaleY(1);
    }
    50% { 
      opacity: 1;
      transform: scaleY(1.2);
    }
  }

  @media (max-width: 768px) {
    .logo {
      max-width: 280px;
    }

    .hero-nav {
      gap: 30px;
    }
  }
</style>

