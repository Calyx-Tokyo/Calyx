---
interface SocialLink {
  name: string;
  url: string;
  icon: string;
}

const socialLinks: SocialLink[] = [
  {
    name: 'X (Twitter)',
    url: 'https://x.com/Calyx3974981',
    icon: `<svg viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>`
  },
  {
    name: 'Instagram',
    url: 'https://www.instagram.com/calyx_band_official',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="2" y="2" width="20" height="20" rx="5"/><circle cx="12" cy="12" r="4"/><circle cx="18" cy="6" r="1" fill="currentColor" stroke="none"/></svg>`
  },
  {
    name: 'YouTube',
    url: 'https://www.youtube.com/channel/UC5F2zMhIP1H7FFLJixZgeaQ',
    icon: `<svg viewBox="0 0 24 24" fill="currentColor"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>`
  },
  {
    name: 'TikTok',
    url: 'https://www.tiktok.com/@calyx527',
    icon: `<svg viewBox="0 0 24 24" fill="currentColor"><path d="M13.91 2h3.02c.1 1.02.55 1.88 1.3 2.62.75.73 1.69 1.17 2.77 1.25v3.06c-1.72-.05-3.2-.55-4.53-1.53v6.97c0 3.12-2.5 5.63-5.76 5.63C8.44 19 6 16.5 6 13.34c0-3.16 2.44-5.66 5.71-5.66.4 0 .79.04 1.17.12v3.14a2.64 2.64 0 0 0-1.17-.25c-1.45 0-2.63 1.2-2.63 2.65 0 1.46 1.18 2.65 2.63 2.65 1.48 0 2.63-1.11 2.63-2.65V2z"/></svg>`
  }
];

const logoUrl = import.meta.env.BASE_URL + 'logo.jpg';
---

<footer class="footer">
  <div class="footer-content">
    <div class="footer-brand fade-in">
      <img src={logoUrl} alt="Calyx" class="footer-logo" />
    </div>
    
    <nav class="social-links fade-in">
      {socialLinks.map(link => (
        <a 
          href={link.url} 
          class="social-link" 
          target="_blank" 
          rel="noopener noreferrer"
          aria-label={link.name}
        >
          <span class="social-icon" set:html={link.icon} />
          <span class="social-name">{link.name}</span>
        </a>
      ))}
    </nav>
    
    <div class="footer-bottom fade-in">
      <p class="copyright">
        &copy; {new Date().getFullYear()} Calyx. All Rights Reserved.
      </p>
    </div>
  </div>
  
  <div class="footer-decoration">
    <div class="decoration-line"></div>
  </div>
</footer>

<style>
  .footer {
    position: relative;
    padding: 80px 24px 40px;
    background: linear-gradient(180deg, var(--color-bg) 0%, #050505 100%);
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 50px;
  }

  .footer-brand {
    text-align: center;
  }

  .footer-logo {
    max-width: 150px;
    opacity: 0.8;
    transition: opacity var(--transition-base);
  }

  .footer-logo:hover {
    opacity: 1;
  }

  .social-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 30px;
  }

  .social-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    color: var(--color-text-muted);
    transition: all var(--transition-base);
  }

  .social-link:hover {
    color: var(--color-accent);
    transform: translateY(-3px);
  }

  .social-icon {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .social-icon :global(svg) {
    width: 100%;
    height: 100%;
  }

  .social-name {
    font-size: 0.7rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .footer-bottom {
    padding-top: 30px;
    border-top: 1px solid var(--color-border);
    width: 100%;
    max-width: 600px;
    text-align: center;
  }

  .copyright {
    font-family: var(--font-serif);
    font-size: 0.75rem;
    color: var(--color-text-muted);
    letter-spacing: 0.1em;
  }

  .footer-decoration {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
  }

  .decoration-line {
    width: 1px;
    height: 60px;
    background: linear-gradient(180deg, var(--color-accent), transparent);
  }

  @media (max-width: 768px) {
    .social-links {
      gap: 20px;
    }

    .social-name {
      display: none;
    }

    .social-icon {
      width: 28px;
      height: 28px;
    }
  }
</style>

